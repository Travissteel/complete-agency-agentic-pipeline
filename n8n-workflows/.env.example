# n8n Agency Pipeline - Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# ============================================
# APIFY CONFIGURATION
# ============================================
APIFY_API_TOKEN=your_apify_token_here
# Get from: https://console.apify.com/account/integrations

# ============================================
# GOHIGHLEVEL (GHL) CONFIGURATION
# ============================================
GHL_API_KEY=your_ghl_api_key_here
# Get from: GHL Settings > API > Generate Key

GHL_LOCATION_ID=your_location_id_here
# Find in: GHL Settings > Business Profile

# Pipeline Stage IDs (get from GHL > Opportunities > Pipeline Settings)
GHL_PIPELINE_ID=your_pipeline_id
GHL_STAGE_CONTACTED=stage_id_contacted
GHL_STAGE_QUALIFIED=stage_id_qualified
GHL_STAGE_MEETING_SCHEDULED=stage_id_meeting_scheduled
GHL_STAGE_MEETING_UPDATED=stage_id_meeting_updated
GHL_STAGE_MEETING_CANCELLED=stage_id_meeting_cancelled
GHL_STAGE_CLOSED_WON=stage_id_closed_won
GHL_STAGE_CLOSED_LOST=stage_id_closed_lost

# ============================================
# INSTANTLY CONFIGURATION
# ============================================
INSTANTLY_API_KEY=your_instantly_api_key_here
# Get from: Instantly > Settings > API Keys

INSTANTLY_CAMPAIGN_ID=your_main_campaign_id
# Get from: Instantly > Campaigns > Select Campaign > Copy ID

INSTANTLY_FOLLOWUP_CAMPAIGN_ID=your_followup_campaign_id
# For stale lead re-engagement

# ============================================
# SMARTLEAD CONFIGURATION (Optional)
# ============================================
SMARTLEAD_API_KEY=your_smartlead_api_key_here
# Get from: SmartLead > Settings > API

SMARTLEAD_CAMPAIGN_ID=your_campaign_id
# If using SmartLead instead of Instantly

# ============================================
# OPENAI CONFIGURATION
# ============================================
OPENAI_API_KEY=your_openai_api_key_here
# Get from: https://platform.openai.com/api-keys
# Used for AI sentiment analysis in reply processing

# ============================================
# SLACK NOTIFICATIONS
# ============================================
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
# Get from: Slack > Apps > Incoming Webhooks

# Slack Channels (without # symbol)
SLACK_CHANNEL_NOTIFICATIONS=pipeline-notifications
SLACK_CHANNEL_ERRORS=pipeline-errors
SLACK_CHANNEL_REPORTS=pipeline-daily-reports

# ============================================
# CALENDAR INTEGRATION
# ============================================
CALENDAR_PROVIDER=calendly
# Options: calendly, cal.com, acuity

CALENDAR_BOOKING_LINK=https://calendly.com/yourname/discovery-call
# Your public booking link

CALENDAR_WEBHOOK_SECRET=your_webhook_secret_here
# For verifying webhook authenticity

# ============================================
# INTERNAL WEBHOOK URLS
# ============================================
# These are n8n webhook URLs that workflows call each other
# Update these after importing workflows to n8n

AI_RECEPTIONIST_WEBHOOK=https://your-n8n-instance.com/webhook/ai-receptionist
NURTURE_WORKFLOW_WEBHOOK=https://your-n8n-instance.com/webhook/nurture-sequence

# ============================================
# EMAIL CONFIGURATION (SMTP)
# ============================================
SMTP_HOST=smtp.gmail.com
# Or your email provider's SMTP server

SMTP_PORT=587
SMTP_USER=your-email@company.com
SMTP_PASSWORD=your_email_password_or_app_password

# Report recipients (comma-separated)
REPORT_EMAIL_RECIPIENTS=team@company.com,manager@company.com

# ============================================
# SYSTEM CONFIGURATION
# ============================================
# Timezone for scheduled workflows
TIMEZONE=America/New_York

# Rate limiting (requests per minute)
API_RATE_LIMIT_PER_MINUTE=60

# Retry configuration
MAX_RETRY_ATTEMPTS=3
RETRY_BACKOFF_SECONDS=2

# ============================================
# FEATURE FLAGS
# ============================================
ENABLE_AI_ANALYSIS=true
ENABLE_SMS_NOTIFICATIONS=true
ENABLE_DAILY_REPORTS=true
ENABLE_AUTO_ARCHIVE=true

# ============================================
# DEVELOPMENT/TESTING
# ============================================
# Set to 'production' or 'development'
ENVIRONMENT=production

# Test mode (dry run, doesn't actually send emails/SMS)
TEST_MODE=false

# Debug logging
DEBUG_LOGGING=false

# ============================================
# CUSTOM FIELD IDs (GHL)
# ============================================
# Get these from GHL > Settings > Custom Fields
# These map to your specific GHL account

GHL_FIELD_SCRAPED_DATE=scraped_date
GHL_FIELD_DATASET_ID=dataset_id
GHL_FIELD_OUTREACH_STATUS=outreach_status
GHL_FIELD_REPLY_SENTIMENT=reply_sentiment
GHL_FIELD_REPLY_INTENT=reply_intent
GHL_FIELD_LAST_REPLY_DATE=last_reply_date
GHL_FIELD_PRIORITY=priority
GHL_FIELD_LAST_CONTACT_DATE=last_contact_date
GHL_FIELD_FOLLOW_UP_TRIGGERED=follow_up_triggered
GHL_FIELD_BOOKING_LINK_SENT=booking_link_sent
GHL_FIELD_MEETING_DATE=meeting_date
GHL_FIELD_MEETING_TYPE=meeting_type
GHL_FIELD_CALENDAR_EVENT_ID=calendar_event_id
GHL_FIELD_LAST_BOOKING_DATE=last_booking_date
GHL_FIELD_BOOKING_STATUS=booking_status
GHL_FIELD_CANCELLATION_DATE=cancellation_date
GHL_FIELD_CANCELLATION_REASON=cancellation_reason
GHL_FIELD_ARCHIVED_DATE=archived_date
GHL_FIELD_ARCHIVE_REASON=archive_reason
GHL_FIELD_CLOSED_DATE=closed_date

# ============================================
# NOTES
# ============================================
# 1. Never commit this file with real values to git
# 2. Add .env to your .gitignore file
# 3. Store sensitive values in a password manager
# 4. Rotate API keys regularly (every 90 days)
# 5. Use environment-specific files (.env.production, .env.development)
# 6. For n8n cloud, set these in the n8n UI under Settings > Environment Variables
# 7. For self-hosted n8n, set these in your docker-compose.yml or .env file
