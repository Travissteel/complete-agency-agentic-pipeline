# =========================================
# AI AGENCY PIPELINE - ENVIRONMENT VARIABLES
# =========================================
# Copy this file to .env and fill in your actual API keys
# NEVER commit .env to version control!

# =========================================
# APIFY - Web Scraping & Lead Generation
# =========================================
APIFY_API_TOKEN=your_apify_api_token_here
APIFY_DEFAULT_PROXY_GROUP=RESIDENTIAL
APIFY_STORAGE_DATASET_ID=your_default_dataset_id

# =========================================
# INSTANTLY - Cold Email Outreach
# =========================================
INSTANTLY_API_KEY=your_instantly_api_key_here
INSTANTLY_WORKSPACE_ID=your_workspace_id
INSTANTLY_CAMPAIGN_ID=your_default_campaign_id

# =========================================
# SMARTLEAD - Alternative Cold Email Platform
# =========================================
SMARTLEAD_API_KEY=your_smartlead_api_key_here
SMARTLEAD_CLIENT_ID=your_smartlead_client_id

# =========================================
# GOHIGHLEVEL - CRM & White-Label Platform
# =========================================
GHL_API_KEY=your_ghl_api_key_here
GHL_LOCATION_ID=your_ghl_location_id
GHL_AGENCY_ID=your_ghl_agency_id
GHL_WEBHOOK_SECRET=your_webhook_secret

# =========================================
# N8N - Workflow Orchestration
# =========================================
N8N_HOST=http://localhost:5678
N8N_WEBHOOK_URL=your_n8n_webhook_url
N8N_API_KEY=your_n8n_api_key
N8N_ENCRYPTION_KEY=your_n8n_encryption_key

# =========================================
# OPENAI - LLM for AI Receptionist & Agents
# =========================================
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview

# =========================================
# ANTHROPIC - Alternative LLM Provider
# =========================================
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-sonnet-4-5-20250929

# =========================================
# DATABASE - PostgreSQL/Supabase
# =========================================
DATABASE_URL=postgresql://user:password@localhost:5432/agency_pipeline
DATABASE_POOL_SIZE=10
DATABASE_TIMEOUT=30000

# =========================================
# REDIS - Caching & Queue Management
# =========================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password

# =========================================
# TWILIO - SMS & Voice for AI Receptionist
# =========================================
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# =========================================
# CALENDLY - Calendar Booking Integration
# =========================================
CALENDLY_API_KEY=your_calendly_api_key
CALENDLY_USER_URI=your_calendly_user_uri

# =========================================
# SLACK - Notifications & Alerts
# =========================================
SLACK_WEBHOOK_URL=your_slack_webhook_url
SLACK_BOT_TOKEN=your_slack_bot_token
SLACK_CHANNEL=#agency-alerts
SLACK_DAILY_REPORT_CHANNEL=#agency-reports
SLACK_ERROR_CHANNEL=#agency-errors

# =========================================
# APPLICATION SETTINGS
# =========================================
NODE_ENV=development
PORT=3000
LOG_LEVEL=info
TIMEZONE=America/New_York

# =========================================
# MONITORING & OBSERVABILITY
# =========================================
MONITORING_INTERVAL=300000          # Metrics collection interval (5 minutes)
DAILY_REPORT_TIME=09:00            # UTC time for daily report
WEEKLY_REPORT_DAY=1                # Monday = 1, Sunday = 7

# =========================================
# SECURITY
# =========================================
JWT_SECRET=your_jwt_secret_key_here
ENCRYPTION_KEY=your_encryption_key_here
WEBHOOK_SIGNING_SECRET=your_webhook_signing_secret

# =========================================
# CLIENT-SPECIFIC VARIABLES
# =========================================
# Add client-specific variables as needed
# CLIENT_INSURANCE_GHL_LOCATION=
# CLIENT_REALESTATE_GHL_LOCATION=
# CLIENT_RECRUITMENT_GHL_LOCATION=
